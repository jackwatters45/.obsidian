{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "defaultBranch": "main",
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noUselessElse": "off",
        "noNonNullAssertion": "off"
      }
    }
  },
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "formatter": {
      "enabled": false
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "files": {
    "maxSize": 5242880,
    "includes": ["**/*.ts", "**/*.tsx", "**/.eslintrc.cjs", "**/.eslintrc.js", "**/.prettierrc.js", "**/biome.json"]
  }
}
