filters:
  and:
    - tags.contains("coding")
    - '!file.name.contains("Template")'
    - file.name != "Coding"
properties:
  file.name:
    displayName: Title
  note.author:
    displayName: Author
  note.language:
    displayName: Language
  file.ctime:
    displayName: Clipped
views:
  - type: table
    name: Coding
    order:
      - file.name
      - author
      - language
      - file.ctime
    sort:
      - property: file.ctime
        direction: DESC
  - type: table
    name: Language
    filters:
      and:
        - list(language).contains(this)
    order:
      - file.name
      - author
      - language
      - file.ctime
