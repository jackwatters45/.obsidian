filters:
  and:
    - note.categories.contains(link("Artists"))
    - '!file.name.contains("Template")'
    - '!file.inFolder("Categories")'
properties:
  file.name:
    displayName: Artist
  note.genre:
    displayName: Genre
  file.ctime:
    displayName: Added
views:
  - type: table
    name: Artists
    order:
      - file.name
      - genre
      - file.ctime
    sort:
      - property: file.ctime
        direction: DESC
  - type: table
    name: Genre
    filters:
      and:
        - list(genre).contains(this)
    order:
      - file.name
      - genre
      - file.ctime
