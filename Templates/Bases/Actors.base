filters:
  and:
    - categories.contains(link("Actors"))
    - '!file.name.contains("Template")'
    - '!file.inFolder("Categories")'
properties:
  file.name:
    displayName: Actor
  file.ctime:
    displayName: Added
views:
  - type: table
    name: Actors
    order:
      - file.name
      - file.ctime
    sort:
      - property: file.name
        direction: ASC
  - type: table
    name: Movies
    filters:
      and:
        - list(cast).contains(this)
    order:
      - file.name
      - year
      - director
      - genre
    sort:
      - property: year
        direction: DESC
  - type: table
    name: Shows
    filters:
      and:
        - list(cast).contains(this)
    order:
      - file.name
      - year
      - genre
    sort:
      - property: year
        direction: DESC
