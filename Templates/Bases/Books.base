filters:
  and:
    - categories.contains(link("Books"))
    - '!file.name.contains("Template")'
    - '!file.inFolder("Categories")'
properties:
  note.author:
    displayName: Author
  file.name:
    displayName: Name
  note.year:
    displayName: Year
  note.genre:
    displayName: Genre
views:
  - type: table
    name: Books
    order:
      - file.name
      - author
      - year
      - rating
      - topics
      - tags
      - language
      - genre
      - finished
      - created
    sort:
      - property: file.name
        direction: ASC
    columnSize:
      note.tags: 403
  - type: table
    name: Top rated
    order:
      - file.name
      - rating
      - last
    sort:
      - property: last
        direction: DESC
  - type: table
    name: Author
    filters:
      and:
        - list(author).contains(this)
    order:
      - file.name
      - year
      - genre
    sort:
      - property: genre
        direction: DESC
  - type: table
    name: Genre
    filters:
      and:
        - list(genre).contains(this)
    order:
      - file.name
      - year
      - genre
